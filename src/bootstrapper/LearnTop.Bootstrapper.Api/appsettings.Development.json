{
  "ConnectionStrings": {
    "WriteDb" : "Server = 127.0.0.1,1433; Database = LearnTopWriteDb; User Id = sa; Password = 1234@abcd; Encrypt = True; TrustServerCertificate = True;",
    "ReadDb" : "Server = 127.0.0.1,1433; Database = LearnTopReadDb; User Id = sa; Password = 1234@abcd; Encrypt = True; TrustServerCertificate = True;",
    "Cache": "127.0.0.1:6379"
  },
  "Authentication": {
    "Audience": "account",
    "TokenValidationParameters": {
      "ValidIssuers": [ "http://learntop.identity:8080/realms/LearnTop", "http://localhost:18080/realms/LearnTop" ]
    },
    "MetadataAddress": "http://127.0.0.1:8080/realms/LearnTop/.well-known/openid-configuration",
    "RequireHttpsMetadata": false
  },
  "KeyCloak": {
    "HealthUrl": "http://127.0.0.1:8080/health/"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://127.0.0.1:5341" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "LearnTop.Api"
    }
  }
}